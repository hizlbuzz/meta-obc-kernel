#!/bin/sh
### BEGIN INIT INFO
# Provides:          voltcan
# Required-Start:
# Required-Stop:
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description:
# Description:
### END INIT INFO

PATH=/sbin:/bin:/usr/sbin:/usr/bin:/app/bin:/app
DESC=VoltCanService

set -e

source obc_common.sh

startService(){
    # NOTE, that Volt- and JmCanService are the same binary, just create a link beforehand
    # ln JmCanService VoltCanService
    VoltCanService\
        -p 3016 \
        -c $OBC_OBCCONF_FILE \
        --log-file $OBC_LOG_PATH/canjm_volt \
        --update-rate 0 \
        --jm-mode voltage \
        can0 >> $OBC_LOG_PATH/el_canjm_volt.log 2>&1 &
        pid=$!
        printAllPid VoltCanService
}

case $1 in
  start)
        echo -n "Starting ${DESC}: "
        startService
  ;;
  stop)
        echo "Stopping ${DESC}: "
        ps -e | grep ${DESC}
        pkill ${DESC}
  ;;
  restart|force-reload)
        $0 stop
        $0 start
  ;;
  status)
        ps -e | grep ${DESC}
   ;;
   *)
        echo "Usage: ${DESC} {start|stop|restart|force-reload|status}" >&2
        exit 1
        ;;
esac

exit 0

# vim:noet
